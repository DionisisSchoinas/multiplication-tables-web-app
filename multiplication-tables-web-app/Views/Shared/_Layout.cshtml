<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .login-display {
            text-align: right;
            font-size: min(max(1.2vmax, 14px), 45px);
            font-weight: 900;
            margin: 5px;
        }
    </style>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Theory", "Theory", "Home")</li>
                    <li>@Html.ActionLink("Simple Test", "PickTest", "SimpleTest")</li>
                    <li>@Html.ActionLink("Final Test", "Questions", "FinalTest")</li>
                    <li>@Html.ActionLink("Teacher View", "Students", "Teacher")</li>
                    @if (Session["is_teacher"] != null)
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Authorization")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login/Register", "Index", "Authorization")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    @if (Session["is_teacher"] != null)
    {
        <div class="login-display">
            Συνδεδεμένος ως : @Session["name"]
        </div>
    }
    <div id="body_container" class="container body-content">
        <div style="overflow: auto; height: 80vh; margin: 45px 30px 30px 35px;">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
