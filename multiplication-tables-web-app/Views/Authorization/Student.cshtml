
@model multiplication_tables_web_app.Models.User

<style>
    .btn-container {
        text-align: center;
    }

    .btn {
        font-size: min(max(1.3vmax, 16px), 48px);
        margin: 10px;
        padding: 0.3em 1em 0.3em 1em;
    }
</style>

<h1>Εγγραφή Μαθητή</h1>
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <table class="table">
        <tr>
            <td>
                @Html.LabelFor(m => m.Username)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Username, new { required = true })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.Password)
            </td>
            <td>
                @Html.PasswordFor(m => m.Password, new { required = true })
            </td>
        </tr>
        <tr>
            <td>
                <label for="Password_Confirmation">Επιβεβαίωση Κωδικού Χρήστη</label>
            </td>
            <td>
                <input id="Password_Confirmation" name="Password_Confirmation" type="password" required />
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.Name)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Name, new { required = true })
            </td>
        </tr>
    </table>

    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    if (ViewBag.error != null)
    {
        <div class="text-danger">
            @ViewBag.error
        </div>
    }
    <br />
    <div class="form-group">
        <div class="btn-container">
            <input type="submit" value="Εγγραφή" class="btn btn-primary" />
        </div>
    </div>
    @Html.Partial("../Shared/Hint");

}