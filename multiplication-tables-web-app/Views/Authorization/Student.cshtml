
@model multiplication_tables_web_app.Models.User

<style>
    .btn-container {
        text-align: center;
    }

    .btn {
        font-size: min(max(1.3vmax, 16px), 48px);
        margin: 10px;
        padding: 0.3em 1em 0.3em 1em;
    }
    .clipboard {
        margin:auto;
        padding-top: 7em;
        padding-left:2em;
        padding-right:2em;
        width: 35em;
        background-image: url('../Content/Images/clipboard.png');
        height: 42em;
        background-repeat: no-repeat;
        background-size: 35em 42em;
        font-family:'Comic Sans MS';
    } 
    
</style>

<div class="clipboard">
    <h2 style="text-align:center;margin-bottom:1em;">Εγγραφή μαθητή</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table ">
        <tr>
            <td>
                @Html.LabelFor(m => m.Username)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Username, new { required = true })
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.Password)
            </td>
            <td>
                @Html.PasswordFor(m => m.Password, new { required = true })
            </td>
        </tr>
        <tr>
            <td>
                <label for="Password_Confirmation">Επιβεβαίωση Κωδικού Χρήστη</label>
            </td>
            <td>
                <input id="Password_Confirmation" name="Password_Confirmation" type="password" required />
            </td>
        </tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.Name)
            </td>
            <td>
                @Html.TextBoxFor(m => m.Name, new { required = true })
            </td>
        </tr>
    </table>

    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
    if (ViewBag.error != null)
    {
        <div class="text-danger">
            @ViewBag.error
        </div>
    }
    <br />
    <div class="form-group">
        <div class="btn-container">
            <input type="submit" value="Εγγραφή" class="btn btn-primary" />
        </div>
    </div>
}
</div>