
<style>
    .div-container {
        text-align: center;
        position: absolute;
        top: 50%;
        left: 50%;
        -ms-transform: translate(-50%, -50%);
        transform: translate(-50%, -50%);
    }

    .button-input {
        font-size: min(max(1.5vmax, 17px), 68px);
        padding: 0.2em 1em 0.2em 1em;
    }

    .button-secondary {
        font-size: min(max(1vmax, 13px), 40px);
        width: 12em;
        margin: 10px;
    }
</style>

@Html.Partial("../Shared/StudentViews")

@model multiplication_tables_web_app.Models.User

<div class="div-container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <table class="table">
            <tr>
                <td class="col-md-5" style="text-align: right">
                    @Html.LabelFor(m => m.Username)
                </td>
                <td class="col-md-7" style="text-align: left">
                    @Html.TextBoxFor(m => m.Username, new { required = true })
                </td>
            </tr>
            <tr>
                <td class="col-md-5" style="text-align: right">
                    @Html.LabelFor(m => m.Password)
                </td>
                <td class="col-md-7" style="text-align: left">
                    @Html.PasswordFor(m => m.Password, new { required = true })
                </td>
            </tr>
        </table>

        if (ViewBag.error != null)
        {
            <div class="text-danger">
                @ViewBag.error
            </div>
        }
        <br />
        <div class="form-group">
            <input type="submit" value="Σύνδεση" class="btn btn-primary button-input" />
        </div>
    }
    <br />
    <div>
        <button class="btn btn-primary button-secondary" onclick="location.href='/Authorization/Student/'">Εγγραφή Μαθητή</button>
        <button class="btn btn-primary button-secondary" onclick="location.href='/Authorization/Teacher/'">Εγγραφή Δασκάλου</button>
    </div>
</div>